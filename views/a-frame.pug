a-scene(embedded)
    a-assets
        img#texture(src="https://i.imgur.com/mYmmbrp.jpg")
    a-entity(environment="preset: goaland; dressingAmount: 600")
    a-sphere(position="0 .9 -5" src="#texture")
    a-entity(text="value: Bernard's first scene; color: #fff;" position="0 1.5 -.33")
    a-box(
        position="2 .9 -4" 
        src="#texture"
        animation__position="property: object3D.position.y; to: 2.2; dir: alternate; dur: 2000; loop: true"
        animation__mouseenter="property: scale; to: 2.3 2.3 2.3; dur: 300; startEvents: mouseenter"
        animation__mouseleave="property: scale; to: 2 2 2; dur: 300; startEvents: mouseleave"
    )
    a-sound(src="https://cdn.aframe.io/basic-guide/audio/backgroundnoise.wav" autoplay="true" position="-6 -4 1" loop="true")
    a-camera
        a-cursor